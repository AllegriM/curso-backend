<main>
    <h1>Tus productos</h1>
    <hr />

    <table>
        <thead>
            <tr>
                <th scope="col">Producto</th>
                <th scope="col">Precio</th>
                <th scope="col">Imagen</th>
            </tr>
        </thead>
        <tbody>
            {{! si productList existe }}
            {{#if products}}
            {{#each products}}
            <tr>
                <td>{{nombre}}</td>
                <td>{{precio}}</td>
                <td>{{descripcion}}</td>
                <td><img class="img" src="{{imagen}}" alt="{{nombre}}" /></td>
            </tr>
            {{/each}}
            {{/if}}
        </tbody>
    </table>

    <!-- products undefined -->
    {{#unless products}}
    <h2>No hay productos</h2>
    {{/unless}}

    <div class="products-link">
        <a href="/">Agregar productos</a>
    </div>

</main>